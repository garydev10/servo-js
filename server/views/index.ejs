<!DOCTYPE html>
<html>

<head>
  <title>Boiler Control</title>
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link rel="stylesheet" href="/public/style.css" />
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body>
  <div class="container">
    <header>
      <h1>Boiler Control</h1>
    </header>
    <hr />
    <div class="mb-3">
      <div id="testui">

        <div id="schedulesForms">
          <% schedules.forEach((schedule, i)=> { %>
          <% const { di, formId, dropdownId, jsonResultId }=uiItems[i]; %>
          <form id="<%= formId %>" class="row">
            <label for="<%= dropdownId %>" class="form-label">Schedule <%= di %> Boiler switch at: </label>
            <div class="col-sm-4">
              <select name="<%= dropdownId %>" id="<%= dropdownId %>" class="form-select">
                <% schedulesOptions.forEach((opt)=> { %>
                <option value="<%= opt %>" <%=(opt===schedule)? "selected" : "" %>>
                  <%= opt %>
                </option>
                <% }); %>
              </select>
            </div>
            <div class="col-sm-4">
              <button type="submit" class="btn btn-primary">
                Schedule Set!
              </button>
            </div>
            <code id="<%= jsonResultId %>"></code>
          </form>
          <hr />
          <% }); %>
        </div>

        <form id="boilerForm" class="row">
          <div class="col-sm-4">
            <label class="form-label">Boiler Button: </label>
          </div>
          <div class="col-sm-4">
            <button type="submit" class="btn btn-primary">
              Boiler Press!
            </button>
          </div>
          <code id="boilerJsonResult"></code>
        </form>
        <hr />

        <form id="webCamForm" class="row">
          <div class="col-sm-4">
            <label class="form-label">Web Cam Image: </label>
            <a href="/public/images" class="link-primary">View Images</a>
          </div>
          <div class="col-sm-4">
            <button type="submit" class="btn btn-primary">Image Get!</button>
          </div>
          <div class="col-sm-4"></div>
          <div id="webCamJsonResult"></div>
          <div id="loading"></div>
        </form>
        <hr />

        <div id="serverTime" class="row">
          <h5>Server Time: <%= serverTime %></h5>
        </div>

        <div id="scheduleRates" class="row">
          <h5>Schedule Rates: <%= scheduleTable.date %></h5>
          <% const tableId = "feeTable"; %>
          <table class="table table-striped" id="<%= tableId %>">
            <thead>
              <tr class="table-info">
                <% const cols=Object.keys(scheduleTable.scheduleRates[0]); %>
                <% cols.forEach((col, index)=> { %>
                <th scope="col">
                  <a class="text-dark" sort-dir="asc" onclick=<%=`sortTable(${index},'${tableId}')` %>><%= col %>
                  </a>
                </th>
                <% }); %>
              </tr>
            </thead>
            <tbody>
              <% scheduleTable.scheduleRates.forEach((rows)=> { %>
              <tr>
                <% cols.forEach((col)=> { %>
                <td>
                  <%= rows[col]%>
                </td>
                <% }); %>
              </tr>
              <% }); %>
            </tbody>
            <table>
        </div>

      </div>
    </div>
  </div>
  <script src="/public/script.js" defer></script>
</body>

</html>