<!DOCTYPE html>
<html>

<head>
  <title>Boiler Control</title>
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link rel="stylesheet" href="/public/style.css" />
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body>
  <div class="container">
    <header>
      <h1>Boiler Control</h1>
    </header>
    <hr />
    <div class="mb-3">
      <div id="testui">

        <div id="serverTime" class="row">
          <p><b>Server Time: <%= serverTime %></b></p>
          <hr />
        </div>

        <div id="schedulesForms">
          <% schedules.forEach((schedule, i)=> { %>
          <% const uiItem = uiItems[i]; %>
          <%- include("partials/schedule", { schedule, i, schedulesOptions, uiItem }) %>
          <% }); %>
        </div>

        <%- include('partials/boiler'); %>

        <%- include('partials/webcam'); %>

        <%- include("partials/rateTable", scheduleTable) %>

      </div>
    </div>
  </div>
  <script src="/public/script.js" defer></script>
</body>

</html>